# Educational Mathematics AI Platform - Environment Configuration
# Copy this file to .env and configure your settings

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-in-production
PORT=5000
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql+psycopg2://username:password@your-neon-host/dbname?sslmode=require
# For local development with SQLite:
# DATABASE_URL=sqlite:///eduplatform.db

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://localhost:6379/0
# For development without Redis:
# REDIS_URL=memory://

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# OpenAI Configuration (for AI tutoring)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=104857600  # 100MB in bytes

# AWS S3 Configuration (optional - for cloud file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name

# Application URLs
APP_URL=http://localhost:3000
API_URL=http://localhost:5000

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting (requests per time period)
RATELIMIT_DEFAULT=1000 per hour

# Development/Testing Flags
ENABLE_MOCK_AI=false  # Set to true to use mock AI responses instead of OpenAI
ENABLE_EMAIL_TESTING=false  # Set to true to log emails instead of sending them

# Feature Flags
ENABLE_FILE_UPLOADS=true
ENABLE_AI_CHAT=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_CLASS_MANAGEMENT=true

# Production-specific settings (uncomment for production)
# FLASK_ENV=production
# DEBUG=False
# SESSION_COOKIE_SECURE=True

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@eduplatform.com

# API Configuration
API_TITLE=Educational Mathematics AI Platform API
API_VERSION=2.0.0
